<odoo>
    <record id="view_jira_backend_form" model="ir.ui.view">
        <field name="name">jira.backend.form</field>
        <field name="model">jira.backend</field>
        <field name="inherit_id" ref="connector_jira.view_jira_backend_form" />
        <field name="arch" type="xml">
            <group name="worklog" position="after">
                <group name="tempo" string="Tempo">
                    <group name="tempo_fields">
                        <field name="tempo_ws_backend_id" />
                    </group>
                    <group name="tempo_description">
                        <p class="oe_grey" colspan="2">
                            Configure link with Tempo Timesheets
                        </p>
                    </group>
                </group>
            </group>
        </field>
    </record>
</odoo>
