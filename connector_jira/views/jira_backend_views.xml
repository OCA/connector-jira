<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Backend -->
  <record id="view_jira_backend_form" model="ir.ui.view">
    <field name="name">jira.backend.form</field>
    <field name="model">jira.backend</field>
    <field name="arch" type="xml">
      <form string="Jira Backend">
        <header groups="connector.group_connector_manager">
          <button name="button_setup"
            type="object"
            class="oe_highlight"
            string="Setup with JIRA"
            states="setup"/>
          <button name="%(action_jira_backend_auth)d"
            type="action"
            class="oe_highlight"
            string="Authentify"
            states="authentify"/>
          <button name="check_connection"
            type="object"
            string="Check Connection"
            states="setup,running"/>
          <button name="%(action_jira_backend_auth)d"
            type="action"
            string="Reset Authentication"
            states="setup,running"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <label for="name" class="oe_edit_only"/>
          <h1>
            <field name="name" class="oe_inline" />
          </h1>
          <group name="api_configuration" string="API Configuration" groups="connector.group_connector_manager">
            <group>
              <field name="version"/>
              <field name="uri"
                placeholder="e.g. https://example.com/jira"
                />
              <field name="verify_ssl"/>
            </group>
          </group>
          <group name="main_configuration" string="Main Configuration">
            <field name="company_id"/>
            <field name="project_template"/>
          </group>
          <notebook>
            <page name="import" string="Imports" states="running">
              <p class="oe_grey oe_inline">
                By clicking on the buttons,
                you will initiate the synchronizations
                with Jira.
                Note that the import or exports
                won't be done directly,
                they will create 'Jobs'
                executed as soon as possible.
              </p>
              <p class="oe_grey oe_inline">
                Once imported,
                some types of records,
                like the products or categories,
                need a manual review.
                You will find the list
                of the new records to review
                in the menu 'Connectors > Checkpoint'.
              </p>
              <group>
                <div>
                  <label string="Link users"
                    class="oe_inline"/>
                </div>
                <button name="import_res_users"
                  type="object"
                  class="oe_highlight"
                  string="Run"/>
              </group>
              <group>
                <div>
                  <label string="Import Issue Types"
                    class="oe_inline"/>
                </div>
                <button name="import_issue_type"
                  type="object"
                  class="oe_highlight"
                  string="Run"/>
              </group>
              <group>
                <div>
                  <label string="Import project tasks since"
                    class="oe_inline"/>
                  <field name="import_project_task_from_date"
                    class="oe_inline"
                    nolabel="1"/>
                </div>
                <button name="import_project_task"
                  type="object"
                  class="oe_highlight"
                  string="Import in background"/>
              </group>
              <group>
                <div>
                  <label string="Import worklogs since"
                    class="oe_inline"/>
                  <field name="import_analytic_line_from_date"
                    class="oe_inline"
                    nolabel="1"/>
                </div>
                <button name="import_analytic_line"
                  type="object"
                  class="oe_highlight"
                  string="Import in background"/>
              </group>
            </page>
            <page name="advanced_configuration" string="Advanced Configuration">
              <group>
                <group>
                  <field name="use_webhooks" invisible="1"/>
                  <field name="odoo_webhook_base_url"/>
                  <field name="epic_link_field_name"/>
                </group>
                <group>
                  <button name="create_webhooks"
                    type="object"
                    string="Install Webhooks"
                    attrs="{'invisible': ['|', ('use_webhooks', '=', True), ('state', '=', 'authentify')]}"/>
                  <button name="delete_webhooks"
                    type="object"
                    string="Remove Webhooks"
                    attrs="{'invisible': ['|', ('use_webhooks', '=', False), ('state', '=', 'authentify')]}"/>
                </group>
              </group>
            </page>
            <page name="issue_type" string="Issue Types" states="running">
              <field name="issue_type_ids">
                <tree string="Jira Issue Type" create="0" delete="0" edit="0">
                  <field name="name"/>
                  <field name="description"/>
                </tree>
                <form string="Jira Issue Type" create="0" delete="0" edit="0">
                  <group>
                    <field name="name"/>
                    <field name="description"/>
                  </group>
                </form>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_jira_backend_tree" model="ir.ui.view">
    <field name="name">jira.backend.tree</field>
    <field name="model">jira.backend</field>
    <field name="arch" type="xml">
      <tree string="Jira Backend">
        <field name="name"/>
        <field name="uri"/>
        <field name="version"/>
      </tree>
    </field>
  </record>

  <record id="action_jira_backend" model="ir.actions.act_window">
    <field name="name">Jira Backends</field>
    <field name="res_model">jira.backend</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_jira_backend"
    name="Backends"
    parent="menu_jira_root"
    action="action_jira_backend"/>

</odoo>
